<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Bus"
            android:textColor="#212121"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Bus Name -->
        <EditText
            android:id="@+id/etBusName"
            android:hint="Bus Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/rounded_input"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- From -->
        <EditText
            android:id="@+id/etFrom"
            android:hint="From"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/rounded_input"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- To -->
        <EditText
            android:id="@+id/etTo"
            android:hint="To"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/rounded_input"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Date -->
        <EditText
            android:id="@+id/etDate"
            android:hint="Date (e.g. 2025-06-01)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/rounded_input"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Time -->
        <EditText
            android:id="@+id/etTime"
            android:hint="Departure Time (e.g. 14:30)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/rounded_input"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Price -->
        <EditText
            android:id="@+id/etPrice"
            android:hint="Price per Ticket"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/rounded_input"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btnAddBus"
            android:text="Add Bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="14dp"
            android:background="@drawable/rounded_button_green"
            android:backgroundTint="#359BBC" />
    </LinearLayout>
</ScrollView>
